<h3>Фильтр</h3>
<%= form_for :q,url: consumptions_path,html: {class: "form-inline filter-form"},enforce_utf8: false,method: :get do |f| %>
  <div class="input-group mr-3">
    <%= f.label "C" %>
    <%= f.date_field :start_date, class: "form-control" %>
  </div>
  <div class="input-group">
    <%= f.label "По" %>
    <%= f.date_field :end_date, class: "form-control" %>
  </div>
  <%= f.submit "Фильтр",class: "btn ml-3",name: nil %>
<% end %>
<h4 class="text-center">Расходы</h4>
    <table class="table">
      <thead>
        <tr>
          <th>За что</th>
          <th>Сумма</th>
          <th>Комментарий</th>
          <th>Время</th>
        </tr>
      </thead>
      <tbody>
        <% @consumptions.each do |item| %>
        <tr>
          <td><%= item.title %></td>
          <td><%= item.amount %>грн</td>
          <td><%= item.comment %></td>
          <td><%= item.created_at %></td>
        </tr>
        <% end %>
        <tr>
          <td colspan="1">Сумма расходов:</td>
          <td colspan="3"><%= @consumptions.sum(:amount) %>грн</td>
        </tr>
      </tbody>
    </table>