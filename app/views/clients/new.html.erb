<h2 class="text-center">Оформление нового клиента</h2>
<div class="row">
  <div class="col-md-5 offset-md-2">
    <%= form_for @client,url: clients_path do |f| %>
    <div class="form-group">
      <%= f.label "Имя" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Возраст" %>
      <%= f.text_field :age,class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Аллергия" %>
      <%= f.text_area :allergy,class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Комментарий" %>
      <%= f.text_area :comment,class: "form-control" %>
    </div>
    <%= f.submit "Оформить клиента", class: "btn btn-success form-control" %>
    <% end %>
  </div>
</div>