<table class="table">
      <thead>
        <tr>
          <th>Кто принял</th>
          <th>Кто оплатил</th>
          <th>Услуга</th>
          <th>Сумма оплаты</th>
          <th>Дата и время</th>
          <th>Комментарий</th>
          <th>Действия</th>
        </tr>
      </thead>
      <tbody>
        <% @incomes.take(5).each do |income| %>
        <tr>
          <td><%= income.acceptor %></td>
          <td><%= income.client.name %></td>
          <td><%= income.title %></td>
          <td><%= income.amount %>грн</td>
          <td><%= income.created_at.strftime("%F %T") %></td>
          <td><%= income.comment %></td>
          <td><%= link_to "Просмотреть", income_path(income.id) %></td>
        </tr>
        <% end %>
        <tr>
          <td colspan="2">Сумма приходов:</td>
          <td colspan="4"><%= @incomes.sum(:amount) %>грн</td>
        </tr>
      </tbody>
    </table>