<div class="row">
  <div class="col-md-5 offset-md-2">
    <%= form_for @transfer,url: inventory_transfers_path do |f| %>
    <%= f.hidden_field :from_branch,value: current_branch.id %>
    <div class="form-group">
      <%= f.label "Филиал" %>
      <%= f.select :to_branch, Branch.all.reject{|b| b.id == current_branch.id }.collect{|s| [s.title, s.id]},{},{class: 'custom-select'} %>
    </div>
    <div class="form-group">
      <%= f.label "Название" %>
      <%= f.select :inventory_category_title,current_branch.inventory_categories.collect{|c| c.title },{},class: "custom-select" %>
    </div>
    <div class="form-group">
      <%= f.label "Количество" %>
      <%= f.number_field :size,class: "form-control",min: 0,step: "0.01" %>
    </div>
    <div class="form-group">
      <%= f.label "Комментарий" %>
      <%= f.text_area :comment,class: "form-control" %>
    </div>
    <%= f.submit "Оформить перевод", class: "btn btn-success form-control" %>
    <% end %>
  </div>
</div>