<h3>Фильтр</h3>
<%= form_for :q,url: encashments_path,html: {class: "form-inline filter-form"},enforce_utf8: false,method: :get do |f| %>
  <div class="input-group mr-3">
    <%= f.label "C" %>
    <%= f.date_field :start_date, class: "form-control" %>
  </div>
  <div class="input-group">
    <%= f.label "По" %>
    <%= f.date_field :end_date, class: "form-control" %>
  </div>
  <%= f.submit "Фильтр",class: "btn ml-3",name: nil %>
<% end %>
<h4 class="text-center">Инкасации</h4>
  <table class="table">
    <thead>
      <tr>
        <th>Сумма</th>
        <th>Комментарий</th>
        <th>Время</th>
      </tr>
    </thead>
    <tbody>
      <% @encashments.each do |item| %>
      <tr>
        <td><%= item.amount %>грн</td>
        <td><%= item.comment %></td>
        <td><%= item.created_at %></td>
      </tr>
      <% end %>
    </tbody>
</table>