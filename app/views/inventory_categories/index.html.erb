<h4>Инвентарь</h4>
<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th>Кол-во</th>
    </tr>
  </thead>
  <tbody>
    <% @inventory_categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= category.size %></td>
        <td>
          <%= link_to "Просмотреть",inventory_category_path(category.id) %><br>
          <%= link_to "Изменить",edit_inventory_category_path(category.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>