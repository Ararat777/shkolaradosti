<h4>Инвентарь: <%= @inventory_category.title %></h4>
<h4>Переводы</h4>
<table class="table">
  <thead>
    <tr>
      <th>Отправитель</th>
      <th>Получатель</th>
      <th>Название инвентаря</th>
      <th>Кол-во</th>
      <th>Статус</th>
    </tr>
  </thead>
  <tbody>
    <% @inventory_category.transfers.each do |transfer| %>
      <tr>
        <td><%= transfer.sender.title %></td>
        <td><%= transfer.reciever.title %></td>
        <td><%= transfer.inventory_category_title %></td>
        <td><%= transfer.size %> шт</td>
        <td><%= transfer.status %></td>
        <% if transfer.to_branch == current_branch.id && transfer.pending? %>
          <td><%= link_to "Подтвердить", confirme_inventory_transfer_path(transfer.id),method: :put %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>