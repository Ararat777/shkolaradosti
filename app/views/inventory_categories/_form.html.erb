<div class="row">
  <div class="col-md-6 offset-md-2">
    <%= form_for inventory_category do |f| %>
    <div class="form-group">
      <%= f.label "Название" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Филиал" %>
      <%= f.select :branch_id, Branch.all.collect{|s| [s.title, s.id]},{},{class: "custom-select" } %>
    </div>
    <div class="form-group">
      <%= f.label "Кол-во" %>
      <%= f.number_field :size, class: "form-control" %>
    </div>
    <%= f.submit "Добавить", class: "btn btn-success form-control" %>
    <% end %>
  </div>
</div>