<div class="row">
  <div class="col-md-6 offset-md-2">
    <%= form_for @user,url: directory_user_path(@user.id) do |f| %>
    <div class="form-group">
      <%= f.label "ФИО" %>
      <%= f.text_field :name, class: "form-control",value: @user.name %>
    </div>
    <div class="form-group">
      <%= f.label "Логин" %>
      <%= f.text_field :email, class: "form-control",value: @user.email %>
    </div>
    <div class="form-group">
      <%= f.label "Номер телефона" %>
      <%= f.text_field :phone, class: "form-control",value: @user.phone %>
    </div>
    <div class="form-group">
      <%= f.label "Филиал" %>
      <%= f.select :branch_id, Branch.all.collect{|s| [s.title, s.id]},{},{class: "custom-select" } %>
    </div>
    <div class="form-group">
      <%= f.label "Роль" %>
      <%= f.select :role_id,Role.all.collect{|r| [r.title, r.id]},{},{class: "custom-select" } %>
    </div>
    <%= f.submit "Добавить", class: "btn btn-success form-control" %>
    <% end %>
  </div>
</div>