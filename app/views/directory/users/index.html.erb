<div class="row">
  <div class="col-md-3">
    <%= link_to "Добавить",new_directory_user_path, class: "btn btn-primary" %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ФИО</th>
          <th scope="col">Номер телефона</th>
          <th scope="col">Роль</th>
          <th scope="col">Филиал</th>
          <th scope="col">Действия</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.phone %></td>
          <td><%= item.role ? item.role.title : "" %></td>
          <td><%= item.branch ? item.branch.title : "" %></td>
          <td><%= link_to "Изменить пароль", directory_user_path(item.id) %> | <%= link_to "Редактировать", edit_directory_user_path(item.id) %> | <%= link_to "Удалить", directory_user_path(item.id),method: :delete,data: {confirm: "Действительно удалить?"} %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>