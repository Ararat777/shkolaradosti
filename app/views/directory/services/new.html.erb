<div class="row">
  <div class="col-md-6 offset-md-2">
    <%= form_for @service,url: directory_branch_services_path(@branch.id) do |f| %>
    <div class="form-group">
      <%= f.label "Название" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Цена" %>
      <%= f.text_field :price,class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Счетность" %>
      <%= f.check_box :countable %>
    </div>
    <div class="form-group">
      <%= f.label "Активность" %>
      <%= f.check_box :active %>
    </div>
    <div class="form-group">
      <%= f.label "Комментарий" %>
      <%= f.text_area :comment,class: "form-control" %>
    </div>
    <%= f.submit "Добавить", class: "btn btn-success form-control" %>
    <% end %>
  </div>
</div>