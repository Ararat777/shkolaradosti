<div class="row">
  <div class="col-md-6 offset-md-2">
    <%= form_for @service,url: directory_branch_service_path(@branch.id,@service.id),method: :put do |f| %>
    <div class="form-group">
      <%= f.label "Название" %>
      <%= f.text_field :title, class: "form-control",value: @service.title %>
    </div>
    <div class="form-group">
      <%= f.label "Цена" %>
      <%= f.text_field :price,class: "form-control",value: @service.price %>
    </div>
    <div class="form-group">
      <%= f.label "Активность" %>
      <%= f.check_box :active,value: @service.active %>
    </div>
    <div class="form-group">
      <%= f.label "Комментарий" %>
      <%= f.text_area :comment,class: "form-control",value: @service.comment %>
    </div>
    <%= f.submit "Добавить", class: "btn btn-success form-control" %>
    <% end %>
  </div>
</div>