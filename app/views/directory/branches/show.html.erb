<h3><%= @branch.title %></h3>
<p><%= @branch.adress %></p>
<div class="row">
  
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-3">
        <h3>Услуги</h3>
        <%= link_to "Добавить",new_directory_branch_service_path(@branch.id), class: "btn btn-primary" %>
      </div>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Название</th>
          <th scope="col">Цена</th>
          <th scope="col">Комментарий</th>
          <th scope="col">Счетность</th>
          <th scope="col">Активность</th>
          <th scope="col">Действия</th>
        </tr>
      </thead>
      <tbody>
        <% @services.each do |item| %>
        <tr>
          <td><%= item.title %></td>
          <td><%= item.price %></td>
          <td><%= item.comment %></td>
          <td><%= item.countable ? "Активно" : "Неактивно" %></td>
          <td><%= item.active ? "Активно" : "Неактивно" %></td>
          <td><%= link_to "Изменить", edit_directory_branch_service_path(@branch.id,item.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>