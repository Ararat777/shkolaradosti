<div class="row">
  <div class="col-md-3">
    <%= link_to "Добавить",new_directory_branch_path, class: "btn btn-primary" %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Название</th>
          <th scope="col">Количество клиентов</th>
          <th scope="col">Адрес</th>
          <th scope="col">Администратор</th>
          <th scope="col">Действия</th>
        </tr>
      </thead>
      <tbody>
        <% @branches.each do |item| %>
        <tr>
          <td><%= item.title %></td>
          <td><%= item.clients.size %></td>
          <td><%= item.adress %></td>
          <td><%= item.manager ? item.manager.name : "" %></td>
          <td><%= link_to "Просмотреть", directory_branch_path(item.id) %> | <%= link_to "Изменить", edit_directory_branch_path(item.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
