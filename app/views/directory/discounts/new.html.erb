<h2>Добавить дисконт</h2>
<div class="row">
  <div class="col-md-5 offset-md-2">
    <%= form_for @discount,url: directory_discounts_path do |f| %>
    <div class="form-group">
      <%= f.label "Название" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Процент скидки" %>
      <%= f.text_field :percent,class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Комментарий" %>
      <%= f.text_area :comment,class: "form-control" %>
    </div>
    <%= f.submit "Добавить", class: "btn btn-success form-control" %>
    <% end %>
  </div>
</div>