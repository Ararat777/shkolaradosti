<h2>Изменить дисконт</h2>
<div class="row">
  <div class="col-md-5 offset-md-2">
    <%= form_for @discount,url: directory_discount_path(@discount.id) do |f| %>
    <div class="form-group">
      <%= f.label "Название" %>
      <%= f.text_field :title, class: "form-control",value: @discount.title %>
    </div>
    <div class="form-group">
      <%= f.label "Процент скидки" %>
      <%= f.text_field :percent,class: "form-control",value: @discount.percent %>
    </div>
    <div class="form-group">
      <%= f.label "Активность" %>
      <%= f.check_box :active,value: @discount.active %>
    </div>
    <div class="form-group">
      <%= f.label "Комментарий" %>
      <%= f.text_area :comment,class: "form-control",value: @discount.comment %>
    </div>
    <%= f.submit "Добавить", class: "btn btn-success form-control" %>
    <% end %>
  </div>
</div>