<h2>Изменить дисконт</h2>
<div class="row">
  <div class="col-md-5 offset-md-2">
    <%= form_for @discount,url: directory_single_discount_path(@discount.id) do |f| %>
    <div class="form-group">
      <%= f.label "Филиал" %>
      <%= f.select :branch_id, Branch.all.collect{|s| [s.title, s.id]},{},{class: "custom-select" } %>
    </div>
    <div class="form-group">
      <%= f.label "Название" %>
      <%= f.text_field :title, class: "form-control",value: @discount.title %>
    </div>
    <div class="form-group">
      <%= f.label "Скидка" %>
      <%= f.text_field :discount_size,class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Фиксированная скидка" %>
      <%= f.check_box :fixed %>
    </div>
    <div class="form-group">
      <%= f.label "Количество" %>
      <%= f.text_field :count,class: "form-control",value: @discount.count %>
    </div>
    <div class="form-group">
      <%= f.label "Активность" %>
      <%= f.check_box :active,value: @discount.active %>
    </div>
    <div class="form-group">
      <%= f.label "Комментарий" %>
      <%= f.text_area :comment,class: "form-control",value: @discount.comment %>
    </div>
    <%= f.submit "Добавить", class: "btn btn-success form-control" %>
    <% end %>
  </div>
</div>