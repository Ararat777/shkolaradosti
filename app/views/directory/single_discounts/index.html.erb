<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-3">
        <h3>Услуги</h3>
        <%= link_to "Добавить",new_directory_single_discount_path, class: "btn btn-primary" %>
      </div>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Название</th>
          <th scope="col">Количество</th>
          <th scope="col">Процент</th>
          <th scope="col">Комментарий</th>
          <th scope="col">Действия</th>
        </tr>
      </thead>
      <tbody>
        <% @discounts.each do |item| %>
        <tr>
          <td><%= item.title %></td>
          <td><%= item.count %></td>
          <td><%= item.percent %></td>
          <td><%= item.comment %></td>
          <td><%= link_to "Изменить", edit_directory_single_discount_path(item.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>