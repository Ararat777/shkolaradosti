<div class="row">
  <div class="col-md-5 offset-md-2">
    <%= form_for @food,url: client_foods_path(@client.id) do |f| %>
    <i class="text-success">Стоимость питания: <%= @food.price %></i>
    <div class="form-group">
      <%= f.label "Количество дней" %>
      <%= f.text_field :paid_days, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Сумма" %>
      <%= f.text_field :amount,class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Комментарий" %>
      <%= f.text_area :comment,class: "form-control" %>
    </div>
    <%= f.submit "Оформить", class: "btn btn-success form-control" %>
    <% end %>
  </div>
</div>