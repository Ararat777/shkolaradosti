<div class="row">
  <div class="col-md-5 offset-md-2">
    <%= form_for @income,url: incomes_path do |f| %>
    <div class="form-group">
      <%= f.label "Кто принимает" %>
      <%= f.text_field :acceptor, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "От кого" %>
      <%= f.select :client, current_branch.clients.collect{|s| [s.name, s.id]},{},{class: "custom-select",id: "select_client" } %>
    </div>
    <div class="form-group">
      <%= f.label "За что" %>
      <%= f.text_field :income_title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Cумма" %>
      <%= f.number_field :amount,class: "form-control",min: 0,step: "0.01" %>
    </div>
    <div class="form-group">
      <%= f.label "Комментарий" %>
      <%= f.text_area :comment,class: "form-control" %>
    </div>
    <%= f.submit "Оформить приход", class: "btn btn-success form-control" %>
    <% end %>
  </div>
</div>