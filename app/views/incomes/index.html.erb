<h3>Фильтр</h3>
<%= form_for :q,url: incomes_path,html: {class: "form-inline filter-form"},enforce_utf8: false,method: :get do |f| %>
  <div class="input-group mr-3">
    <%= f.select :client, current_branch.clients.collect{|s| [s.name, s.id]},{include_blank: "Выберите клиента"},{class: "custom-select",id: "select_client" } %>
  </div>
  <div class="input-group mr-3">
    <%= f.select :service, current_branch.services.collect{|s| [s.title, s.id]} << ["Контрагент", "nil"],{include_blank: "Выберите услугу"},{class: "custom-select",id: "select_service" } %>
  </div>
  <div class="input-group mr-3">
    <%= f.label "C" %>
    <%= f.date_field :start_date, class: "form-control" %>
  </div>
  <div class="input-group">
    <%= f.label "По" %>
    <%= f.date_field :end_date, class: "form-control" %>
  </div>
  <%= f.submit "Фильтр",class: "btn ml-3",name: nil %>
<% end %>

<h4 class="text-center text-success">Приходы</h4>
  <%= render 'cash_boxes/incomes' %>
