<div class="row">
  <div class="col-md-5 offset-md-2">
    <%= form_for @paid_service,url: paid_services_path do |f| %>
    <div class="form-group">
      <%= f.label "Тип услуги" %>
      <%= f.select :service_id, current_branch.services.collect{|s| [s.title, s.id,{"data-price" => s.price}]},{},{class: "custom-select",id: "select_service" } %>
    </div>
    <%= render "clients/find_client_input",f: f %>
    <div class="form-group">
      <%= f.label "Начало" %>
      <%= f.date_field :start_date,class: "form-control date",value: Date.today,min: Date.today.beginning_of_month  %>
    </div>
    <div class="form-group">
      <%= f.label "Конец" %>
      <%= f.date_field :end_date,class: "form-control date",value: Date.today.end_of_month %>
    </div>
    <div class="form-group">
      <%= f.label "Скидочный купон" %>
      <%= f.select :single_discount_id, current_branch.single_discounts.collect{|s| [s.title, s.id,{"data-discount" => s.discount_size,"data-fixed" => s.fixed}]},{include_blank: "Выберите купон"},{class: "custom-select",id: "select_discount" } %>
    </div>
    <div class="form-group">
      <%= f.label "Требуемая сумма" %>
      <div id="required_amount_box">
        <%= render "required_amount",f: f %>
      </div>
    </div>
    <%= f.fields_for :incomes do |ff| %>
    <div class="form-group">
      <%= ff.label "Сумма" %>
      <%= ff.number_field :amount,class: "form-control",min: 1,id: "amount",step: "0.01" %>
    </div>
    <% end %>
    <div class="form-group">
      <%= f.label "Комментарий" %>
      <%= f.text_area :comment,class: "form-control" %>
    </div>
    <%= f.submit "Оформить", class: "btn btn-success form-control" %>
    <% end %>
    <div class="mt-4">
      <%= form_for @paid_service,url: calculate_required_amount_path,html:{id: "calculate_form"},remote: true do |ff| %>
      <%= ff.hidden_field :client_id,id: "discount_client_id" %>
      <%= ff.hidden_field :single_discount_id %>
      <%= ff.hidden_field :service_id %>
      <%= ff.hidden_field :start_date,id: "start_date",value: Date.today %>
      <%= ff.hidden_field :end_date,id: "end_date",value: Date.today.end_of_month %>
      <div class="form-group">
        <%= ff.submit "Перерасчет" %>
      </div>
    <% end %>
    </div>
  </div>
</div>