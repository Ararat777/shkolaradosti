<div class="row">
  <div class="col-md-5 offset-md-2">
    <%= form_for @paid_service,url: paid_services_path do |f| %>
    <div class="form-group">
      <%= f.label "Тип услуги" %>
      <%= f.select :service_id, current_branch.services.collect{|s| [s.title, s.id,{"data-price" => s.price}]},{},{class: "custom-select",id: "select_service" } %>
    </div>
    <div class="form-group">
      <%= f.label "Для кого" %>
      <%= f.select :client_id, current_branch.clients.collect{|s| [s.name, s.id]},{},{class: "custom-select",id: "select_client" } %>
    </div>
    <div class="form-group">
      <%= f.label "Начало" %>
      <%= f.date_field :start_date,class: "form-control date",value: Date.today,min: Date.today.beginning_of_month,max: Date.today.end_of_month  %>
    </div>
    <div class="form-group">
      <%= f.label "Конец" %>
      <%= f.date_field :end_date,class: "form-control date",value: Date.today.end_of_month,readonly: "readonly"  %>
    </div>
    <div class="form-group">
      <%= f.label "Требуемая сумма" %>
      <div id="required_amount_box">
        <%= render "required_amount",f: f %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Сумма" %>
      <%= f.number_field :amount,class: "form-control",min: 0,id: "amount",step: "0.01" %>
    </div>
    <div class="form-group">
      <%= f.label "Комментарий" %>
      <%= f.text_area :comment,class: "form-control" %>
    </div>
    <%= f.submit "Оформить", class: "btn btn-success form-control" %>
    <% end %>
    <div class="mt-4">
      <%= form_for @paid_service,url: calculate_required_amount_path,html:{id: "calculate_form"},remote: true do |ff| %>
      <%= ff.hidden_field :service_id %>
      <%= ff.hidden_field :start_date,id: "start_date",value: Date.today %>
      <%= ff.hidden_field :end_date,id: "end_date",value: Date.today.end_of_month %>
      <div class="form-group">
        <%= ff.submit "Перерасчет" %>
      </div>
    <% end %>
    </div>
  </div>
</div>